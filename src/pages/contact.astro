---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@components/sections/misc/ContactSection.astro";
import { SITE } from "@data/constants";

const pageTitle: string = `Contacto | ${SITE.title}`;
---

<!--Utilizing MainLayout for the outer layout of the page, and defining meta for SEO purposes-->
<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://crossfitxela.com/contact",
    url: "https://crossfitxela.com/contact",
    name: "Contacto | CrossFit Xela",
    description:
      "Contact CrossFit Xela for more information on our classes, schedules, and how to get started on your fitness journey.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://crossfitxela.com",
      name: "CrossFit Xela",
      description:
        "CrossFit Xela is the only CrossFit affiliate in Quetzaltenango, offering over 8 years of experience in transforming lives through functional training and community.",
    },
    inLanguage: "es-GT",
  }}
>
  <ContactSection />
</MainLayout>
